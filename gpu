#!/bin/bash

echo "=========================================================================================================="
printf "%-3s | %-20s | %-22s | %-16s | %-7s | %-7s\n" "GPU" "Physical Slot Name" "GPU Name" "Bus-Id" "Temp(C)" "Fan(%)"
echo "----------------------------------------------------------------------------------------------------------"

# dmidecode 정보를 한 번만 불러와서 저장 (속도 향상 및 root 권한 체크)
dmi_info=$(dmidecode -t 9 2>/dev/null)

# temperature.gpu 와 fan.speed 옵션 추가
nvidia-smi --query-gpu=index,pci.bus_id,name,temperature.gpu,fan.speed --format=csv,noheader | while IFS=',' read -r index bus_id name temp fan; do
    index=$(echo "$index" | xargs)
    bus_id=$(echo "$bus_id" | xargs | tr '[:upper:]' '[:lower:]')
    name=$(echo "$name" | xargs)
    temp=$(echo "$temp" | xargs)
    fan=$(echo "$fan" | xargs)
    
    short_bus_id=$(echo "$bus_id" | sed 's/^00000000:/0000:/')
    
    slot=""
    current_dev="$short_bus_id"
    
    # PCIe 트리를 거슬러 올라가며 dmidecode와 일치하는 부모 슬롯 찾기
    while [ -n "$current_dev" ]; do
        dmi_slot=$(echo "$dmi_info" | awk -v bus="$current_dev" '
            /Designation:/ { des=$0; sub(/^[ \t]+Designation: /, "", des) }
            /Bus Address:/ && $0 ~ bus { print des }
        ' | head -n 1)
        
        if [ -n "$dmi_slot" ]; then
            slot="$dmi_slot"
            break
        fi
        
        # 못 찾았으면 sysfs를 이용해 한 단계 위(부모 브릿지)로 이동
        dev_path="/sys/bus/pci/devices/$current_dev"
        if [ -e "$dev_path/.." ]; then
            parent_dev=$(basename $(readlink -f "$dev_path/.."))
            if [[ ! "$parent_dev" =~ ^[0-9a-fA-F]{4}:[0-9a-fA-F]{2}:[0-9a-fA-F]{2}\.[0-9a-fA-F]$ ]]; then
                break
            fi
            current_dev="$parent_dev"
        else
            break
        fi
    done

    # 최후의 sysfs 폴더 확인 (에러 유발했던 2>/dev/null 제거 완료)
    if [ -z "$slot" ]; then
        for addr_file in /sys/bus/pci/slots/*/address; do
            if [ -f "$addr_file" ]; then
                slot_addr=$(cat "$addr_file")
                if [[ "$short_bus_id" == *"$slot_addr"* ]]; then
                    found_slot=$(basename $(dirname "$addr_file"))
                    if [[ ! "$found_slot" == 255-* ]]; then
                        slot="Slot $found_slot"
                        break
                    fi
                fi
            fi
        done
    fi
    
    if [ -z "$slot" ]; then
        slot="N/A (Check Topology)"
    fi

    # 서버용 GPU(팬 없음)의 경우 [Not Supported]로 출력되어 표가 깨지는 것을 방지
    if [[ "$fan" == "[Not Supported]" ]]; then
        fan="N/A"
    fi

    # 온도와 팬 상태를 포함하여 출력
    printf "%-3s | %-20s | %-22s | %-16s | %-7s | %-7s\n" "$index" "$slot" "$name" "$bus_id" "$temp" "$fan"
done
echo "=========================================================================================================="
